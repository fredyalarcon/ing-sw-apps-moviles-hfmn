<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccessActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="126dp"
        android:text="@string/welcome"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/buttonVisitor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/buttonVisitor"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="@string/visitor"
        app:layout_constraintBottom_toTopOf="@+id/buttonCollector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonCollector"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="371dp"
        android:enabled="false"
        android:text="@string/collector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVisitor" />


</androidx.constraintlayout.widget.ConstraintLayout>